@model IEnumerable<Clinic.Models.Consultation>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1 class="text-info">View Consultation</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Consultations" asp-action="Index" method="get">

    <div class="input-group mb-3">
        <input type="text" class="form-control" name="SearchString" placeholder="Search" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <input class="btn btn-outline-info" type="submit" value="Search"/>
        </div>
    </div>  
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.patient.display_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doctor.display_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
