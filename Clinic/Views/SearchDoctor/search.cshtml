                    @Html.DisplayNameFor(model => model.phone)
                </u>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.phone)
            </dd>
        </dl>
    }
    }
    else if(ViewData["find"].Equals(0))
    {
    <h3 class="text-danger">No Data Found</h3>
    }

